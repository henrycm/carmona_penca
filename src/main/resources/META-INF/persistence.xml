<?xml version="1.0" encoding="UTF-8"?>


<persistence version="1.0"         
		xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
		http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"	>

    <persistence-unit name="multinivelUnit"  transaction-type="JTA">
   
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>java:/multinivelDS</jta-data-source>
         <class>co.com.multinivel.model.GroupMember</class>
		 <class>co.com.multinivel.model.User</class>
		 <class>co.com.multinivel.model.GroupAuthority</class>  
		 <class>co.com.multinivel.model.Banco</class>  
		 <class>co.com.multinivel.model.Departamento</class>  
		 <class>co.com.multinivel.model.Pedido</class>  
		 <class>co.com.multinivel.model.Parametro</class>  
		 <class>co.com.multinivel.model.DetallePedido</class>  
		 <class>co.com.multinivel.model.Afiliado</class>  
		 <class>co.com.multinivel.model.TiposProducto</class>  
		 <class>co.com.multinivel.model.Consumo</class>  
		 <class>co.com.multinivel.model.DetConsumo</class>
		 <class>co.com.multinivel.model.Red</class>  
   
       <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <!--
             <property name="hibernate.hbm2ddl.auto" value="create"/>
            -->
        </properties>
	    </persistence-unit>
</persistence>	